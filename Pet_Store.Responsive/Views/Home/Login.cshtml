@model LoginInputModel

@{
    ViewBag.Title = "Login";
}
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Administración</p>
                    <h1>Inicio de Sesión</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<br>

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="login-form text-center pb-80">
            <form method="post">

                <div class="form-group inputs">
                    <label asp-for="Email"> Correo Electrónico</label>
                    <input asp-for="Email"  style="width: 100%" class="form-control" placeholder="Correo Electrónico" autofocus />
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <label asp-for="Password">Contraseña</label>
                    <input asp-for="Password" style="width: 100%" class="form-control" placeholder="Contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group inputs">
                    <button id="submit" type="submit" class="btn btn-outline-primary">Ingresar</button>
                    <br />
                    <a asp-action="forgetpassword">Olvido su contraseña?</a>
                </div>

            </form>

