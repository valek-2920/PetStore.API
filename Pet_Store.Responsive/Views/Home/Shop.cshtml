@{
    ViewBag.Title = "Tienda";
}
<!-- Header Tienda -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Fresco y comodo</p>
                    <h1>Tienda</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- fin Header Tienda -->
<!-- Seccion Productos -->
<div class="product-section mt-80 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-filters">
                    <ul>
                        <li class="active" data-filter="*">Todo</li>
                        <li data-filter=".Gato">Gatos</li>
                        <li data-filter=".Perro">Perros</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row product-lists">
            <div class="col-lg-4 col-md-6 text-center Gato">
