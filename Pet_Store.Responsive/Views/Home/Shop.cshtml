                    </div>
                    <h3>Camisa Garoppolo</h3>
                    <p class="product-price"><span>Unidad</span> ₡25.000 </p>
                    <a class="cart-btn" href="@Url.Action("Cart", "Home")">
                        <i class="fas fa-shopping-cart"></i> Agregar al Carrito
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 text-center Perro">
