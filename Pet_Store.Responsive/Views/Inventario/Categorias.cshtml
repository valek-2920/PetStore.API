@model List<Category>

@{
    ViewBag.Title = "Inventario";
}

<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Administración</p>
                    <h1>Categorias de Productos</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mb-5">
      <input type="button" value="Agregar Categoria" class="btn btn-primary"
                                       onclick="location.href='@Url.Action("AgregarCategorias", "Inventario")'">
</div>

<div class="product-section mt-150 mb-150">
    <div class="container-fluid">
        <div class="dt-responsive table-responsive">
            <table id="footer-search" class="table table-striped table-bordered nowrap">
                <thead>
                    <tr>
                        <th>Código de Categoria</th>
                        <th>Descripción</th>
                        <th style="text-align:center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Description</td>
                            <td style="text-align:center">
                                       <input type="button" value="Eliminar" class="btn btn-danger"
                                       onclick="location.href='@Url.Action("EliminarCategoria", "Inventario")'">
                            </td>
                        </tr>
                    } 
                </tbody>
               @* <tfoot>
                    <tr>
                        <th>Código de Categoria</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </tfoot>*@
            </table>
        </div>
    </div>
</div>
