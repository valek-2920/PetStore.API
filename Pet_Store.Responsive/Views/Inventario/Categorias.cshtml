@model List<Category>

@{
    ViewBag.Title = "Inventario";
}

<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Administración</p>
                    <h1>Categorias de Productos</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mb-5">
    <a asp-controller="Inventario" asp-action="AgregarCategorias" class="btn btn-primary">
        Agregar Categoría
    </a>
</div>
  <form method="post">
      <div class="product-section mt-150 mb-150">
    <div class="container-fluid">
        <div class="dt-responsive table-responsive">
            <table id="footer-search" class="table table-striped table-bordered nowrap">
                <thead>
                    <tr>
                        <th>Código de Categoria</th>
                        <th>Descripción</th>
                        <th style="text-align:center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <input asp-for="@item.CategoryId" hiden />
                            <td>@item.CategoryId</td>
                            <td>@item.Description</td>
                            <td style="text-align:center">
                                <button asp-action="EliminarCategorias" asp-route-id="@item.CategoryId" class="btn btn-danger">
                                    Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
                @* <tfoot>
                <tr>
                <th>Código de Categoria</th>
                <th>Descripción</th>
                <th>Acciones</th>
                </tr>
                </tfoot>*@
            </table>
        </div>
    </div>
</div>
</form>

