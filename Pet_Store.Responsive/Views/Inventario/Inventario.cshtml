@model List<Products>

@{
    ViewBag.Title = "Inventario";
}

<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Administración</p>
                    <h1>Inventario</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Tabla de productos -->
<form>
    <div class="product-section mt-150 mb-150">
        <div class="container-fluid">
            <div class="dt-responsive table-responsive">
                <table id="footer-search" class="table table-striped table-bordered nowrap">
                    <thead>
                        <tr >
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Categoria</th>
                            <th>Imagen</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="producto_@item.ProductId">
                                <input asp-for="@item.ProductId" hidden />
                                <td>@item.ProductId</td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Category.Description</td>
                                <td><img src="@item.Files" alt="" width="100"></td>
                                <td style="text-align:center">
                                    <button asp-action="Upsert" asp-route-id="@item.ProductId" class="btn btn-primary">
                                        Editar
                                    </button>
                                    <a onclick=deleteProducts("@item.ProductId") class="btn btn-danger">
                                        Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    @* <tfoot>
                    <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Lista Precio</th>
                    <th>Precio</th>
                    <th>Categoria</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                    </tr>
                    </tfoot>*@
                </table>
            </div>
        </div>
    </div>
</form>

<script>
    function deleteProducts(id) {
        Swal.fire({
            title: 'Administración de productos',
            text: "¿Estás seguro que quieres borrar este producto?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Aceptar',
            cancelButtonText: 'Cancelar'
            }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "DELETE",
                    url: "/Inventario/EliminarProductos/" + id,
                    success: function (response) {
                        if (response.success) {
                            Swal.fire(
                                'Administración de productos',
                                'El producto ha sido eliminado, exitosamente!',
                                'success'
                            );
                            $("#producto_" + id).remove();
                        }
                        else {
                            Swal.fire(
                                'Administración de productos',
                                'Se ha dado un error al eliminar producto',
                                'error'
                            )
                        }
                    }
                })
            }
        })
    }
</script>