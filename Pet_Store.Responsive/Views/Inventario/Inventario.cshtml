@model List<Products>

@{
    ViewBag.Title = "Inventario";
}

<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Administración</p>
                    <h1>Inventario</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Tabla de productos -->
<form method="post">
    <div class="product-section mt-150 mb-150">
        <div class="container-fluid">
            <div class="dt-responsive table-responsive">
                <table id="footer-search" class="table table-striped table-bordered nowrap">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Categoria</th>
                            <th>Imagen</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <input asp-for="@item.ProductId" hiden />
                                <td>@item.ProductId</td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Category.Description</td>
                                <td><img src="@item.Files" alt="" width="100"></td>
                                <td style="text-align:center">
                                    <button asp-action="Upsert" asp-route-id="@item.ProductId" class="btn btn-primary">
                                        Editar
                                    </button>
                                    <button  asp-action="EliminarProductos" asp-route-id="@item.ProductId" class="btn btn-danger">
                                        Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                    @* <tfoot>
                    <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Lista Precio</th>
                    <th>Precio</th>
                    <th>Categoria</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                    </tr>
                    </tfoot>*@
                </table>
            </div>
        </div>
    </div>
</form>