@model ProductsViewModel

@{
    ViewBag.Title = "Manejo de productos";
}

<form asp-action="Upsert" method="post" >

    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Administración</p>
                        <h2 class="text-primary">@(Model.Product.ProductId!=0?"Actualizar": "Crear")  Producto</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Product.Name" class="form-control form-control-user" name="Product.Name"
                                               placeholder="Nombre del Producto">
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="Product.Description" type="text" class="form-control form-control-user" name="Product.Description"
                                               placeholder="Descripción del Producto">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Product.Price" type="number" class="form-control form-control-user"
                                               name="Product.Price" placeholder="Precio del Producto">
                                    </div>
                                    <div class="col-sm-6">
                                        <select asp-for="Product.Category" asp-items="@Model.CategoryList" class="form-select form-control-user" name="CategoryList">
                                            <option disabled selected>--Seleccionar Categoría--</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0 align-items-center">
                                        <input asp-for="Product.Files" type="file" name="file" class="form-control form-control-user" />
                                    </div>
                                </div>
                                @if (Model.Product.ProductId != 0)
                                {
                                    <button asp-action="Upsert" asp-route-id="@Model.Product.ProductId" class="btn btn-primary btn-user btn-block">Actualizar</button>
                                }
                                else
                                {
                                    <button asp-action="Upsert" class="btn btn-primary btn-user btn-block">Crear</button>
                                }
                            <a asp-controller="Inventario" asp-action="Inventario" class="btn btn-secondary btn-user btn-block">
                                Regresar
                            </a>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
