@{
    ViewBag.Title = "Roles";
}

<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Administración</p>
                    <h1>Agregar Rol</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mb-5">
      <input type="button" value="Regresar" class="btn btn-primary"
                                       onclick="location.href='@Url.Action("Roles", "User")'">
</div>
<div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <form class="user">
                                <div class="form-group row">
                                    <div class="col-sm-12 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="NombreRol"
                                            placeholder="Descripción del Rol">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">Agregar Rol</button>
                            </form>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
