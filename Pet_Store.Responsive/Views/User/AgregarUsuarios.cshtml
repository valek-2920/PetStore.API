@{
    ViewBag.Title = "Agregar Producto";
}

<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Administración</p>
                    <h1>Agregar Usuarios</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <form class="user">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <span>Nombre</span>
                                        <input type="text" class="form-control form-control-user" id="NombreUsuario"
                                            placeholder="Nombre">
                                    </div>
                                    <div class="col-sm-6">
                                        <span>Apellido</span>
                                        <input type="text" class="form-control form-control-user" id="ApellidoUsuario"
                                            placeholder="Apellido">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <span>Fecha de Nacimiento</span>
                                        <input type="date" class="form-control form-control-user" id="edadUsuario"
                                            placeholder="Fecha de Nacimiento">
                                    </div>
                                    <div class="col-sm-6">
                                        <span>Teléfono Celular</span>
                                        <input type="tel" class="form-control form-control-user" id="telUsuario"
                                            placeholder="Teléfono">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <span>Correo Electrónico</span>
                                        <input type="email" class="form-control form-control-user" id="correoUsuario"
                                            placeholder="Correo">
                                    </div>
                                    <div class="col-sm-6">
                                        <span>Contraseña</span>
                                        <input type="password" class="form-control form-control-user" id="contrasenaUsuario"
                                            placeholder="Contraseña">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <span>Dirección</span>
                                        <input type="text" class="form-control form-control-user" id="DireccionUsuario"
                                            placeholder="Dirección">
                                    </div>
                                    <div class="col-sm-6">
                                        <span>Asigne un rol</span>
                                        <select class="form-control" aria-label="Default select example">
                                            <option selected>Seleccione el rol</option>
                                            <option value="1">Medicamentos</option>
                                            <option value="2">Higiene</option>
                                            <option value="3">Accesorios</option>
                                        </select>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">Agregar Usuario</button>
                            </form>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

