@model Role

@{
    ViewBag.Title = "Roles";
}

<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Administración</p>
                    <h1>Agregar Rol</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mb-5">
    <input type="button" value="Regresar" class="btn btn-primary"
           onclick="location.href='@Url.Action("Roles", "User")'">
</div>
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <form method="post">
                            <div class="form-group header">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <h3>Rol</h3>
                            </div>

                            <div class="form-group">
                                <div class="clearfix separator"></div>
                            </div>

                            <div class="form-group inputs">
                                <input type="hidden" asp-for="Id" />

                                <label asp-for="Name" class="form-text">Nombre</label>
                                <input asp-for="Name" class="form-control" placeholder="Name" autofocus />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <partial name="_PartialViewButtons" model="Model.Id" />

                        </form>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
